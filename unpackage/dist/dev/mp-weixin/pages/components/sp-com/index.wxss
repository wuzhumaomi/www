.pbl-view-item:nth-child(3) {
  height: 500rpx !important;
}
.pbl-view-item:first-child {
  margin-top: 0rpx;
}
.pbl-view-item {
  position: relative;
  width: 40%;
  height: 600rpx;
  background-color: #ffffff;
  box-shadow: 0 0 6px #C8C8C8;
  border-radius: 20rpx;
  margin-top: 20rpx;
  overflow: auto;
}
.pbl-top {
  width: 100%;
  position: absolute;
  height: 70%;
}
.pbl-top .Uimg {
  position: absolute;
  width: 100%;
  height: 100%;
}
.pbl-top image {
  position: absolute;
  width: 100%;
  height: 100%;
}
.pbl-text {
  bottom: 0;
  width: 100%;
  position: absolute;
  height: 30%;
  font-size: 26rpx;
  padding: 20rpx;
  color: #333333;
}
.pbl-text .pbl-text-bot {
  position: absolute;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: baseline;
  -webkit-align-items: baseline;
          align-items: baseline;
  width: 100%;
  bottom: 20rpx;
}
.pbl-text .pbl-text-bot .text01, .pbl-text .pbl-text-bot .text02, .pbl-text .pbl-text-bot .text03 {
  margin-right: 10rpx;
}
.pbl-text .pbl-text-bot .text01 {
  color: #fa3534;
  font-size: 40rpx;
}
.pbl-text .pbl-text-bot .text02 {
  color: #fa3534;
  font-size: 20rpx;
}
.pbl-text .pbl-text-bot .text03 {
  color: #909399;
  font-size: 18rpx;
}

